{{ 'booking-system.css' | asset_url | stylesheet_tag }}

<div class="booking-system{% if template.name == 'index' %} booking-system--home{% endif %}">
  <div class="booking-system__container page-width">
    <div class="booking-system__content">
      <div class="booking-system__time-slot">
        <span class="booking-system__icon">{% render 'icon-calendar' %}</span>
        <span class="booking-system__count">2</span>
        <span class="booking-system__text">7:00 PM Tonight</span>
      </div>
      
      <div class="booking-system__location">
        <span class="booking-system__icon">{% render 'icon-location' %}</span>
        <span class="booking-system__text">{{ shop.address.city }}, {{ shop.address.province_code }}, {{ shop.address.country }}</span>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Booking System",
  "settings": [
    {
      "type": "text",
      "id": "booking_phone",
      "label": "Booking Phone Number",
      "default": "123-456-7890"
    },
    {
      "type": "text",
      "id": "booking_email",
      "label": "Booking Email",
      "default": "reservations@yourrestaurant.com"
    }
  ],
  "presets": [
    {
      "name": "Booking System"
    }
  ]
}
{% endschema %}

{% stylesheet %}
.booking-system {
  background: #1a1f2d;
  padding: 15px 0;
  color: #ffffff;
}

.booking-system__container {
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.booking-system__content {
  display: flex;
  gap: 20px;
  align-items: center;
}

.booking-system__time-slot,
.booking-system__location {
  display: flex;
  align-items: center;
  gap: 10px;
  padding: 8px 16px;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 20px;
}

.booking-system__count {
  background: #ffffff;
  color: #1a1f2d;
  padding: 2px 8px;
  border-radius: 12px;
  font-size: 0.9em;
  font-weight: 500;
}

.booking-system__text {
  font-size: 0.95em;
  font-weight: 400;
}

.booking-system__icon {
  display: flex;
  align-items: center;
}

@media screen and (max-width: 989px) {
  .booking-system__content {
    flex-direction: column;
    align-items: flex-start;
    gap: 10px;
  }
}
{% endstylesheet %}

